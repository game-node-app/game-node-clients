    "@types/react": "^18.3.11",
    "autoprefixer": "^10.4.18",
    "barrelsby": "^2.8.1",
    "postcss": "^8.4.47",
    "tailwindcss": "3.4.3",
    "typescript": "^5.6.3"
  }
}
